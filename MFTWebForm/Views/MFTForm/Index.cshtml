@model MFTWebForm.Models.TermsViewModel

@{
    ViewBag.Title = "Terms";
    Layout = "~/Views/Shared/_Main.cshtml";
}

<div class="col-md-12">
    @if (Model.Terms.Count != 0) {
        <div class="row">
            <div>&nbsp;</div>
            <div class="pull-right btn btn-green">
                @Html.ActionLink("Add New Term", "NewTerm")
            </div>
        </div>

        <table class="table table-striped table-condensed">
            @for (int i = 0; i < Model.Terms.Count; i++) {
                <tr>
                    <td class="col-md-2">@Html.DisplayTextFor(n => Model.Terms[i].Name)</td>
                    <td class="col-md-10">@Html.ActionLink("New Entry", "NewEntry", "MFTForm", Model.Terms[i].Name)</td>
                </tr>
            }
        </table>
    }
    else {
        <div>There are no Terms</div>
        <div class="btn btn-green">
            @Html.ActionLink("Add New Term", "NewTerm")
        </div>
    }
</div>

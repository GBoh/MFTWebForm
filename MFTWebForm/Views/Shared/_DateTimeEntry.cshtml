@model MFTWebForm.Models.MFTFormInputViewModel

<div class="form-group col-md-8">
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => Model.Date, "Start Date:")</div>
        <div class="col-md-10">@Html.TextBoxFor(m => Model.Date, new {@class = "form-control" })</div>
    </div>
</div>

<div class="form-group col-md-8">
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => Model.StartTime, "Start Time:")</div>
        <div class="col-md-10">@Html.TextBoxFor(m => Model.StartTime, new { @class = "form-control" })</div>
    </div>
</div>

<div class="form-group col-md-8">
    <div class="row">
        <div class="col-md-2">@Html.LabelFor(m => Model.ClockHours, "Clock Hours:")</div>
        <div class="col-md-10">@Html.TextBoxFor(m => Model.ClockHours, new { @class = "form-control" })</div>
    </div>
</div>
